<%= render partial: "./memos/header" %>

<div class="container">
<div class="row">
    <div class="col s12 m12">
      <div class="card #607d8b blue-grey">
        <div class="card-content white-text">
          <span class="card-title"><%= @manual.title %></span>
          <p><%= @manual.body %></p>
        </div>
        <div class="card-action">
          <% if user_signed_in? %><%= link_to 'Edit', edit_manual_path(@manual) %><% end %>
          <%= link_to 'Back', manuals_path %>
        </div>
      </div>
    </div>
  </div>
</div>