
<%= render partial: "./memos/header" %>

<div class="container">
<br>
<h4>◆対応マニュアル◆</h4>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manuals.each do |manual| %>
      <tr>
        <td><%= manual.title %></td>
        <td><%= link_to '詳細', manual, class:"waves-effect waves-teal btn-flat" %></td>
        <td><% if user_signed_in? %><%= link_to '編集', edit_manual_path(manual) %><% end %></td>
        <td><% if user_signed_in? %><%= link_to '削除', manual, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<% if user_signed_in? %><%= link_to '新規作成', new_manual_path %><% end %>
<br>
</div>

